<p style="color: green"><%= notice %></p>


<h1>Repositories</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Tags</th>
      <th scope="col">Profile</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @repositories.each do |repository| %>

    <tr>
      <th scope="row"><%= repository.id %></th>
      <td><%= repository.name%></td>
      <td><%= repository.tags %></td>
      <td> <%= link_to repository.profile.username, repository.profile%></td>
      <td> <%= link_to "Show this repository", repository, class: "btn btn-primary" %> </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New repository", new_repository_path, class: "btn btn-primary"  %>
